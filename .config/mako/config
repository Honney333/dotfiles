# Rounded corners
border-radius=10

# Anchor position (top-right corner)
anchor=top-right

# Default timeout (in milliseconds)
default-timeout=5000

# Low urgency notifications (less important)
[urgency=low]
background-color=#000000
border-color=#4f4f4f
text-color=#FFFFFF
