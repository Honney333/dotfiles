# Normal urgency notifications (default)
[urgency=normal]
background-color=#000000
border-color=#0000FF
text-color=#FFFFFF
default-timeout=5000

# Critical urgency notifications (urgent)
[urgency=critical]
background-color=#5c0000
border-color=#FF0000
text-color=#FFD700
