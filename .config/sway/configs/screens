# swaymsg -t get_outputs to get monitor info
set $top_left DP-3
set $top_right DP-2
set $bot_left DP-7

output $top_left pos 0 0 res 1920x1080@60Hz scale 1 scale_filter smart
output $top_right pos 1920 0 res 1920x1080@143.981Hz scale 1 scale_filter smart
output $bot_left pos 0 1080 res 3840x2160@60Hz scale 1
